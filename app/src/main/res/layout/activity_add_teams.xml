<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        tools:context=".addTeams">


        <TextView
            android:id="@+id/static_textView_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"
            android:padding="10sp"
            android:text="SET TEAM AND MEMBER NAMES"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/set_first_team_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Team 1: Einsteins"
            android:textSize="15sp"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textColor="#817A7A"
            android:textColorHint="#817A7A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/static_textView_one" />

        <EditText
            android:id="@+id/set_first_team_firstmember_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Team 1 member: Meredith"
            android:textSize="15sp"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textColor="#817A7A"
            android:textColorHint="#817A7A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/set_first_team_name" />

        <EditText
            android:id="@+id/set_first_team_secondmember_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Team 1 member: Kevin"
            android:textSize="15sp"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textColor="#817A7A"
            android:textColorHint="#817A7A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/set_first_team_firstmember_name" />

        <EditText
            android:id="@+id/set_second_team_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Team 2: Geniuses"
            android:textSize="15sp"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textColor="#817A7A"
            android:textColorHint="#817A7A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/set_first_team_secondmember_name" />

        <EditText
            android:id="@+id/set_second_team_firstmember_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Team 2 member: Galileo"
            android:textSize="15sp"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textColor="#817A7A"
            android:textColorHint="#817A7A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/set_second_team_name" />

        <EditText
            android:id="@+id/set_second_team_secondmember_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Team 2 member: Da Vinci"
            android:textSize="15sp"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textColor="#817A7A"
            android:textColorHint="#817A7A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/set_second_team_firstmember_name" />

        <Button
            android:id="@+id/go_to_main_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Lets go!"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/set_second_team_secondmember_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/go_to_main_activity">

            <TextView
                android:id="@+id/rules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:padding="3dp"
                android:text="Rules:" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:padding="2dp"
                android:text="1. Explain word without using it!" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:padding="2dp"
                android:text="2. Correct word = +1 point. Skipped word = -1 point." />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:padding="2dp"
                android:text="3. First team to reach 50 total points - wins." />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:padding="2dp"
                android:text="4. Follow the app guidance on who explains!" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:padding="2dp"
                android:text="5. When time runs out, guesser can guess 1 last time." />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>